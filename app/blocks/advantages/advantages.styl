.advantages
	container-fluid()
	padding-top 20px
	padding-bottom 50px
	
	+above($tablet)
		padding-top 42px

	+above($desktop)
			padding-top 75px
			padding-bottom 59px

	&__list
		margin 0
		padding 0
		
		list-style none
		
		+above($tablet)
			padding-bottom 4px
		
		+above($desktop)
			display flex
			
			width 100%
	
	&__item
		position relative
		
		padding 0 44px
		padding-top 125px
		
		text-align center
		
		&::before
			content ''
			position absolute
			top 0
			
			width 100px
			height 100px
			
			transform translateX(-50%)

		&_fast
			&::before
				background url('../assets/img/general/slide-icon-fast.svg') no-repeat
		
		&_cool
			&::before
				background url('../assets/img/general/slide-icon-cool.svg') no-repeat
		
		&_expensive
			&::before
				background url('../assets/img/general/slide-icon-expensive.svg') no-repeat


		+between($tablet, $desktop)
			margin 0 30px
			margin-bottom 40px
			padding 0
			padding-bottom 39px
			padding-left 128px
			
			border-bottom 1px solid #3c3c3c
			
			text-align left
			
			&:nth-child(n+2)
				display block
			
			&:last-child
				margin-bottom 0
				
				border-bottom none
			
			&::before
				left 0
				
				transform translate(0)
			
		+above($desktop)
			border-right 1px solid #3c3c3c
			
			&:last-child
				border-bottom none
	
	&__item-title
		margin 0
		padding 0
		
		font-size 3rem
		line-height 3rem
		
	&__item-text
		font-size 2rem
		line-height 2.7rem
		





