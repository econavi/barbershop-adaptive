$keyframe-name = modal-open
@keyframes {$keyframe-name}
	for i in 0..10
		{10% * i}
			opacity (i / 10)


.modal
	display none
	
	&_open
		display block
		animation modal-open 0.2s
	
	&__window
		position absolute
		top 50%
		left 50%
		z-index 1001
		
		width 100vw

		color #000
		background #f8f5f2 url('../assets/img/general/pattern-white.jpg')
		
		transform translate(-50%, -30%)
		
		+above($tablet)
			width auto
	
	&__close-btn
		position absolute
		top 10px
		right 10px
		
		width 22px
		height 22px
		
		border 0
		outline 0
		background none

		cursor pointer
		
		+above($tablet)
			right -34px
		
		&::before, &::after
			content ''
			position absolute
			top 10px
			left 2px
			
			width 19px
			height 4px
			
			background #d0d0d0
			border-radius 1px
		
		&::before
			transform rotate(45deg)
		
		&::after
			transform rotate(-45deg)
		
		&:hover::before, 
		&:hover::after
			background #fff
	
	&__blur
		position fixed
		top 0
		left 0
		z-index 1000
				
		width 100%
		height 100%

		background rgba(0, 0, 0, 0.8)

		